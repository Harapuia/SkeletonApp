<HomeScreen>
	BoxLayout:
		orientation: 'vertical'
		id: homescreen
		BoxLayout:
			orientation:"horizontal"
			size_hint: 1,None
			height:'1cm'
			Button:
				id:button2
				text:'test'
				on_release:root.AndroidTest()
			Button:
				id:button3
				text:'NFC'
				#on_release:root.manager.current='nfc'
				on_release: app.swap_to(app.NfcScr)
			Button:
				text: 'Add Video'
				on_release: root.addVideo()
		ScrollView:
			StackLayout:
				size_hint: 1, None
				height: self.minimum_height
				id: fileList
		BoxLayout:
			size_hint: 1, None
			height: '1cm'
			Button: 
				id:button3
				text: 'Camera'
				on_release: root.startCamera()
				
	
<CameraScreen>
	BoxLayout:
		orientation:"vertical"
		Button:
			id:cambutton
			text:'start'
			on_release: root.startCamera()
<NfcScreen>
	BoxLayout:
		orientation:"vertical"
		Button:
			id:filebut
			text:'File'
			on_release: root.printDir()
<FileWidget>
	size_hint: 1, None
	height: '2.4cm'
	Image:
		size_hint: None, 1
		width: '1.35cm'
		id:img
	Button:
		id: filebutton
		text: root.name
		on_release: root.pressed()
	BoxLayout:
		size_hint: None, 1
		width: '0.675cm'
		orientation:"vertical"
		id: button_layout
		ToggleButton:
			text: 'N'
			id:nfc_toggler
			on_state: root.toggle_nfc(self.state) 
		ToggleButton:
			text: 'T'
			id:tribler_toggler


