<HomeScreen>
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			orientation:"horizontal"
			size_hint: 1,None
			height:100
			Button:
				id:button2
				text:'test'
				on_release:root.AndroidTest()
			Button:
				id:button3
				text:'NFC'
				on_release:root.manager.current='nfc'
			Button:
				text: 'Add Video'
				on_release: root.addVideo()
		ScrollView:
			StackLayout:
				size_hint: 1, None
				height: self.minimum_height
				id: fileList
		BoxLayout:
			size_hint: 1, None
			height: 100
			Button: 
				id:button3
				text: 'Camera'
				on_release: root.startCamera()
				
	
<CameraScreen>
	BoxLayout:
		orientation:"vertical"
		Button:
			id:cambutton
			text:'start'
			on_release: root.startCamera()
<NfcScreen>
	BoxLayout:
		orientation:"vertical"
		Button:
			id:filebut
			text:'File'
			on_release: root.printDir()
<FileWidget>
	size_hint: 1, None
	height: 150
	Button:
		id: filebutton
		text: root.name
