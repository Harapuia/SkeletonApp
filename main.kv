<HomeScreen>
	BoxLayout:
		orientation: 'vertical'
		id: homescreen
		BoxLayout:
			orientation:"horizontal"
			size_hint: 1,None
			height:'1cm'
			Button:
				text:'Test'
				on_release:root.AndroidTest()
			Button:
				text: 'Add Video'
				on_release: root.addVideo()
			Button:
				text:'Cam Test'
				on_release:app.swap_to(app.CamScr)
		ScrollView:
			StackLayout:
				size_hint: 1, None
				height: self.minimum_height
				id: fileList
		BoxLayout:
			size_hint: 1, None
			height: '1cm'
			Button: 
				id:button3
				text: 'Camera'
				on_release: root.startCamera()
<FileWidget>
	size_hint: 1, None
	height: '2.4cm'
	Image:
		size_hint: None, 1
		width: '1.35cm'
		id:img
	AndroidWidgetHolder:
		id: and
	Button:
		id: filebutton
		text: root.name
		on_release: root.pressed()
	BoxLayout:
		size_hint: None, 1
		width: '0.675cm'
		orientation:"vertical"
		id: button_layout
		ToggleButton:
			text: 'N'
			id:nfc_toggler
			on_state: root.toggle_nfc(self.state) 
		ToggleButton:
			text: 'T'
			id:tribler_toggler

<CamScreen>
	BoxLayout:
		orientation: 'vertical'
		id: camScreen

		CameraWidget:
			id: camera

			BoxLayout:
				size_hint_y: None
				height: '48dp'

				Button:
					text: 'Start camera'
					on_release: camera.start()
				Button:
					text: 'Stop camera'
					on_release: camera.stop()
